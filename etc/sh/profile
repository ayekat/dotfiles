# Profile loaded when logging into a shell.
# Written by ayekat on a cold morning in january 2017.

path() {
	test -d "$2" || return
	case ":$PATH:" in
		(*:"$2":*)
			;;
		(*)
			case "$1" in
				(prepend) PATH="$2:$PATH" ;;
				(append) PATH="$PATH:$2" ;;
			esac
	esac
}

# Work around distributions that still keep separate sbin directories:
path append "$(readlink -f /usr/local/sbin)"
path append "$(readlink -f /usr/sbin)"
path append "$(readlink -f /sbin)"

# Set user-path:
path prepend "$(readlink -f "$HOME/.local/bin")"

# Load profiles in profile.d:
if [ -d "$XDG_CONFIG_HOME/sh/profile.d" ]; then
	for profile in "$XDG_CONFIG_HOME/sh/profile.d/"*.sh; do
		if [ -r "$profile" ]; then
			. "$profile"
		fi
	done
	unset profile
fi

unset -f path
export PATH
