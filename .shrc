# Delete the 'Desktop' folder if on an Arch installation:
[ $arch = 'arch' ] && rmdir $HOME/Desktop 2> /dev/null

# Print system logo:
printlogo $arch

# Display the todo file in the home directory:
[ -e $HOME/TODO ] && { echo; cat $HOME/TODO; echo; }

# }}}

