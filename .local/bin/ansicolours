#!/bin/bash
# Prints out a table demonstrating all ANSI colour sequences.
# Written by ayekat (forgot date).

for f in {30..37}; do
	case $f in
		30) printf "%8s  " "black";;
		31) printf "%8s  " "red";;
		32) printf "%8s  " "green";;
		33) printf "%8s  " "yellow";;
		34) printf "%8s  " "blue";;
		35) printf "%8s  " "magenta";;
		36) printf "%8s  " "cyan";;
		37) printf "%8s  " "white";;
	esac
	printf "\e[%dm %d;-- \e[0m" $f $f
	for b in {40..47}; do
		printf "\e[%d;%dm %d;%d \e[0m" $f $b $f $b
	done
	printf "\n%10s" ""
	printf "\e[01;%dm %d;-- \e[0m" $f $f
	for b in {40..47}; do
		printf "\e[01;%d;%dm %d;%d \e[0m" $f $b $f $b
	done
	echo
done

