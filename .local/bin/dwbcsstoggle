#!/bin/sh
# Renames the custom CSS file for dwb (and thus toggles whether a custom CSS
# style is used or not).

filename=stylesheet.css
filename_disabled=${filename}.disabled

cd $XDG_CONFIG_HOME/dwb
if [ -e $filename ]; then
	mv $filename $filename_disabled && notify-send dwb 'disabled custom CSS'
else
	mv $filename_disabled $filename && notify-send dwb 'enabled custom CSS'
fi

