#!/usr/bin/env sh

HOSTNAME="${HOSTNAME:-$(hostname)}"
XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"

case "$HOSTNAME" in
	ixh)    icc_profile='lenovo_thinkpad_x230' ;;
	phobia) icc_profile='asus asus' ;;
	*)      icc_profile='';;
esac
if [ -z "$icc_profile" ]; then
	echo "no colour profile defined for $HOSTNAME" >&2
	exit 1
fi
i=1
for p in $icc_profile; do
	icc_path="$confdir"/argyll/"$p".icc
	if [ ! -f "$icc_path" ]; then
		echo "file not found: $icc_path" >&2
		continue
	fi
	dispwin -d $i "$icc_path"
	i=$(($i+1))
done
