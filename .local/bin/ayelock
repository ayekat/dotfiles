#!/bin/sh
# Starts or stops an xautolock session.

ayelock_start() {
	if [ -z "$1" ]; then
		ayelock_help
	else
		xautolock -time $1 -locker slock &
	fi
}

ayelock_stop() {
	xautolock -exit
}

ayelock_help() {
	printf "Usage: %s {start \033[4mdelay\033[0m|stop}\n" $(basename $0)
}

case "$1" in
	start) ayelock_start "$2";;
	stop)  ayelock_stop;;
	*)     ayelock_help;;
esac

