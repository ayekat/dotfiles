#!/usr/bin/env sh
# This file can be linked under a different name to launch corresponding Java
# JAR files in the jarwrapper.d.
# Written by ayekat on a stressed sunday afternoon in october 2013.

cmdname="$(basename "$0")"
scriptname="$(dirname "$0")/$(test -L "$0" && readlink "$0" || echo "$0")"
jardir="$scriptname".d

if [ ! -f "$jardir"/"$cmdname".jar ]; then
	printf "could not find corresponding jarfile '%s.jar' in %s\n" \
			"$cmdname" "$jardir" >&2
	exit 1
fi

java -jar "$jardir"/"$cmdname".jar "$@"

